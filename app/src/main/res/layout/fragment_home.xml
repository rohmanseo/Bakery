<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                app:cardCornerRadius="10dp">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btnNavDrawer"
                    android:layout_width="50sp"
                    android:layout_height="50dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_btn_hamburger" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:elevation="10dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:src="@drawable/cute_avatar" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/svMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_shape_gray"
            app:iconifiedByDefault="false"
            app:queryBackground="@color/transparent"
            app:queryHint="Search want to buy" />

        <TextView
            android:id="@+id/tvPopular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/lato_bold"
            android:text="Popular"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/lato_bold"
            android:text="Recommend for you"
            android:textColor="@color/black" />

    </LinearLayout>
</layout>