<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BakeryApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="fontFamily">@font/lato_bold</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="RatingBarTheme" parent="Widget.AppCompat.RatingBar.Small">
<!--        <item name="colorControlNormal">@color/gray</item>-->
<!--        <item name="colorControlActivated">@color/yellow</item>-->
        <item name="android:progressTint">@color/yellow</item>
        <item name="android:secondaryProgressTint">@color/primary</item>

    </style>
    <style name="TabLayoutTheme" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ParentHeading">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Heading1" parent="ParentHeading">
        <item name="android:textSize">96sp</item>
        <item name="fontFamily">@font/lato_light</item>
    </style>
    <style name="Heading2" parent="ParentHeading">
        <item name="android:textSize">60sp</item>
        <item name="fontFamily">@font/lato_light</item>
    </style>
    <style name="Heading3" parent="ParentHeading">
        <item name="android:textSize">48sp</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="Heading4" parent="ParentHeading">
        <item name="android:textSize">34sp</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:letterSpacing">0.25</item>
    </style>
    <style name="Heading5" parent="ParentHeading">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="Heading6" parent="ParentHeading">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="Subtitle1" parent="ParentHeading">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:letterSpacing">0.15</item>
    </style>
    <style name="Subtitle2" parent="ParentHeading">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>
    <style name="Body1" parent="ParentHeading">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:letterSpacing">0.5</item>
    </style>
    <style name="Body2" parent="ParentHeading">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/lato</item>
    </style>

</resources>